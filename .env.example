# Secret key for cryptographic operations - generate a strong random string
SECRET_KEY=your-strong-secret-key-here

# Database connection URL - SQLite for local development or your production DB URL
DATABASE_URL=sqlite:///./task_management.db

# Optional test database URL
TEST_DATABASE_URL=sqlite:///./test_task_management.db

# Celery message broker URL - defaults to Redis local instance
CELERY_BROKER_URL=redis://localhost:6379/0

# Celery results backend URL - defaults to Redis local instance
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Environment - development, staging, production
ENVIRONMENT=development

# Debug mode - True or False
DEBUG=True

# AWS Region for SSM parameter fetching (if using)
AWS_REGION=us-east-1

# AWS SSM Parameter Store secret name (for production/staging DB URL)
AWS_SSM_DB_SECRET_NAME=

